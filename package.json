{
  "version": "0.3.0",
  "name": "mst-async-storage",
  "description": "Brings AsyncStorage support to mobx-state-tree for React Native projects.",
  "license": "MIT",
  "authors": [{
    "name": "Steve Kellock",
    "email": "steve@kellock.ca",
    "url": "https://github.com/skellock"
  }, {
    "name": "Jamon Holmgren",
    "email": "jamonholmgren@gmail.com",
    "url": "https://jamon.dev"
  }],
  "repository": "https://github.com/jamonholmgren/mst-async-storage",
  "homepage": "https://github.com/jamonholmgren/mst-async-storage",
  "main": "dist/mst-async-storage.umd.js",
  "module": "dist/mst-async-storage.es5.js",
  "typings": "dist/mst-async-storage.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "readme.md"
  ],
  "scripts": {
    "compile": "yarn tsc",
    "prebuild": "yarn tsc",
    "build": "rollup -c rollup.config.ts",
    "clean": "npx npm-run-all clean:*",
    "clean:build": "npx rimraf build",
    "clean:dist": "npx rimraf dist",
    "format": "prettier --write {\\*\\*,.}/\\*.ts && tslint -p . --fix",
    "lint": "tslint -p .",
    "prepare": "yarn build",
    "test:compile": "yarn tsc -p tsconfig-test.json --pretty",
    "test:compile:watch": "yarn tsc -p tsconfig-test.json --pretty --watch",
    "test": "ava -s",
    "e2e": "npx npm-run-all clean:\\* compile test:compile test clean:\\* compile build",
    "ci:test": "npx npm-run-all clean:\\* test:compile test e2e",
    "ci:publish": "semantic-release"
  },
  "peerDependencies": {
    "@react-native-community/async-storage": "1.x.x",
    "mobx-state-tree": "2.x || 3.x"
  },
  "devDependencies": {
    "@react-native-community/async-storage": "^1.6.1",
    "@semantic-release/git": "^10.0.1",
    "@types/lodash.camelcase": "4.3.6",
    "ava": "2.4.0",
    "lodash.camelcase": "4.3.0",
    "mobx": "5.13.0",
    "mobx-state-tree": "3.14.1",
    "prettier": "1.18.2",
    "rollup": "1.21.4",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-filesize": "6.2.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "semantic-release": "^19.0.2",
    "testdouble": "^3.12.4",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.6.3"
  },
  "ava": {
    "files": [
      "build/**/*.test.js"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": "package.json",
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
